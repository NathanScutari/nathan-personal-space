{% extends 'base.html.twig' %}

{% block title %}Hello ChatController!{% endblock %}

{% block body %}

    <div class="card chat-card" data-jwt="{{ jwt }}" data-hub-url="{{ hubUrl }}">
        <div class="card-header"><h2 class="text-secondary">Chat</h2></div>
        <div class="card-body">
            <div class="chat-messages" data-chat-background=1></div>
        </div>
        <div class="card-footer">
            <form>
                <div class="input-group mb-3">
                    <button type="submit" class="input-group-text" id="basic-addon1"><i class="fas fa-comments"></i></button>
                    <input type="text" id="send-message-button" class="form-control" placeholder="Message" aria-label="Message" aria-describedby="basic-addon1">
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('chat') }}
{% endblock %}